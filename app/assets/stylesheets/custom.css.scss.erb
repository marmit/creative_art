@font-face {
  font-family: “EraserRegular”;
  src: url('<%= asset_path 'EraserRegular.ttf' %>') format('truetype');
}

@font-face {
  font-family: “DK Crayon Crumble”;
  src: url('<%= asset_path 'DK Crayon Crumble.ttf' %>') format('truetype');
}

div.container {
  padding: .75%;
  margin: 0;
  position: absolute;
  border: ridge 20px #DEB887;
  color: #fff;
  width: 96.5%;
}

body {
  background: #000;
  margin: 0;
  font-family: “EraserRegular”, Arial, sans-serif;

  a{
  color: #D1A5B7;
  text-decoration: none;
    &:hover{
      color: #DB86A8;
      box-shadow: 0 2px 2px -2px gray;
    }
  }
}

#landing_page {
}

#landing_image {
  height: 100%;
  width: 100%;
}

/* Header */

#logo_button{
  border: none;
  width: 20%;
  height: 20%;
}

#logo{
  border-right: solid 2.75px #333;
  border-bottom: solid 2.25px #333;
  width: 20%;
  height: 16%;
  margin: 1% 0 0 5%;
  float:left;
}

#login_bar{
  float: right;
  padding: 1% 8%;
  color: #051c01;

  ul li{
    font-size: 150%;
    list-style-type: none;
    display: inline-block;
  }

 a{
  color: yellow;
  text-decoration: none;
    &:hover{
      color: #0a3103;
      text-decoration: underline;
    }
  }

  a.new {
  color: #624C92;
  text-decoration: none;
    &:hover{
      color: #4E387E;
      text-decoration: underline;
    }
  }

  h1 {
    color: maroon;
  }
}

/* Body */

#main{
  text-decoration: none;
  float: right;
  margin: 1% 5% 5% 5%;
  width: 90%;
  height: auto !important;
}

#main_body{
  color: #fff;
  margin: 1%;
  padding: 1%;
}

h1 {
  font-size: 250%;
}

.row {
  color: #fff;
  margin: 5% 25% 5% 0;
  padding-right: 35%;
  padding-left: 15%;
}

/* Footer */

footer, .push {
  color: #999;
  height: 10%;
  float: right;
  padding-right: 25px;
  a {
    color: #555;
    text-decoration: none;
    &:hover {
      color: #222;
      text-decoration: underline;
    }
  }
  small {
    float: left;
  }
  ul {
    float: right;
    list-style: none;
    li {
      float: left;
      margin-left: 10px;
    }
  }
}

/* miscellaneous */

.debug_dump {
  clear: both;
  color: #fff;
  width: 100%;
  background: blue;
}

/* Forms */

form {
}

label {
  font-size: 150%;
  margin: 2%;
}

input, textarea, select, .uneditable-input {
  font-size: 150%;
  width: 100%;
  margin: 2%;
  padding: 2%;
}

.create_button {
  font-size: 100%;
  width: 150px;
  -moz-border-radius: 5%;
  -webkit-border-radius: 5%;
  border-radius: 5%;
  margin: 5%;
  border-right: solid 3px #333;
  border-bottom: solid 3px #333;

  &:hover {
    border-right: solid 2.25px #333;
    border-bottom: solid 2.25px #333;
    -moz-box-shadow: inset 0 0 1px #888;
    -webkit-box-shadow: inset 0 0 1px #888;
    box-shadow: inset 0 0 1px #888;
  }
  &:click {
    border: none;
    -moz-box-shadow: inset 0 0 2px 2px #888;
    -webkit-box-shadow: inset 0 0 2px 2px #888;
    box-shadow: inset 0 0 2px 2px #888;
  }
}

#error_explanation {
  color: #f00;
  ul {
    text-size: 75%;
    list-style: none;
    margin: 0 0 18px 0;
  }
}

.field_with_errors {
  border: solid 3px red;
  border-right: none;
  border-bottom: none;
  border-left: none;
 }

/* Alerts */
.alert {
  clear: both;
  position: block;
  text-align: center;
  margin-left: auto;
  margin-right: auto;
}

.alert-success {
  background: green;
  color: #fff;
  width: 65%;
  -moz-border-radius: 15%;
  -webkit-border-radius: 15%;
  border-radius: 15%;
  border: solid 4px #222;
  -moz-box-shadow: inset 0 0 5px #888;
  -webkit-box-shadow: inset 0 0 5px #888;
  box-shadow: inset 0 0 5px #888;
}

.alert-error {
  color: red;
  border: none;
  background: none;

}

/* Main Static Pages */

#home_page, #about, #contact_info {
  font-size: 200%;
  font-family: “DK Crayon Crumble”, Arial, sans-serif;
}

#contact_info {
  float: left;
  padding-right: 55%;
}

#contact_info_left {
  font-size: 200%;
  font-family: “DK Crayon Crumble”, Arial, sans-serif;
}

aside#location_embed {
  float: right;
  position: relative;
}

#catch_phrase {
  font-size: 150%;
  position: absolute;
  top: 4%;
  left: 50%;
  right: -.2%;
  float: right;
}

/* Changing Creative color */

@-webkit-keyframes color_change {
  0% { color: red; }
  25% { color: yellow; }
  75% { color: green; }
  100% { color: blue; }
}
@-moz-keyframes color_change {
  0% { color: red; }
  25% { color: yellow; }
  75% { color: green; }
  100% { color: blue; }
}
@-ms-keyframes color_change {
  0% { color: red; }
  25% { color: yellow; }
  75% { color: green; }
  100% { color: blue; }
}
@-o-keyframes color_change {
  0% { color: red; }
  25% { color: yellow; }
  75% { color: green; }
  100% { color: blue; }
}
@keyframes color_change {
  0% { color: red; }
  25% { color: yellow; }
  75% { color: green; }
  100% { color: blue; }
}

b#company_name {
  color: red;
  -webkit-animation: color_change 7s infinite alternate;
  -moz-animation: color_change 7s infinite alternate;
  -ms-animation: color_change 7s infinite alternate;
  -o-animation: color_change 7s infinite alternate;
  animation: color_change 7s infinite alternate;
}

/* teachers/courses index */

.teachers, .courses {
  list-style: none;
  text-decoration: none;
  li {
    overflow: auto;
    padding: 10px 0;
    border-top: 1px solid #333;
    a {
      color: #555;
      text-decoration: none;
      &:hover {
        color: #222;
        text-decoration: underline;
      }
    }
    &:last-child {
      border-bottom: 1px solid #333;
    }
  }
}

div.pagination {
  a{
  color: #051c01;
  text-decoration: none;
    &:hover{
      color: #0a3103;
    text-decoration: underline;
    }
  }
}

/* Calendar */

div#calendar_courses {
  display: none;
  font-size: 150%;
  position: absolute;
  top: 4%;
  left: 1%;
  right: 10%;
  float: center;
}

#calendar_courses .calendar, #calendar_courses_page .calendar {
  border-collapse: collapse;
  width: 110%;

  td, th {
    font-family: "Lucida Grande", arial, helvetica, sans-serif;
    font-size: 10px;
    padding: 6px;
    border: 1px solid #999;
  }

  th {
    background: #DDD;
    color: #666;
    text-align: center;
    width: 14.2857142857143%;
  }

  td {
    background: #FFF;
    color: #777;
    height: 80px;
    vertical-align: top;
    font-size: 16px;
  }

  .notmonth, .notmonth a { color: #CCC; }
  .today { background-color: #D7F2FF; }
}

#calendar_courses #month, #calendar_courses_page #month {
  font-family: "Lucida Grande", arial, helvetica, sans-serif;
  margin: 0;
  padding-top: 10px;
  padding-bottom: 10px;
  text-align: center;
  font-size: 150%;
  background: #DDD;
  width: 110%;
  a {
    text-decoration: none;
    padding: 0 10px;
    color: #999;
  }
}

#calendar_courses ul, #calendar_courses_page ul {
  font-size: 100%;
  padding-left: 20px;
}

li#calender_link {
  font-size: 110%;
  list-style-type: none;
}

#calendar_courses_show {
  font-size: 150%;
  float: center;
  left: 20%;
  right: 20%;
  position: absolute;
  top: 1.5%;
  color: #aa44ff;
  -webkit-animation: color_change 7s infinite alternate;
  -moz-animation: color_change 7s infinite alternate;
  -ms-animation: color_change 7s infinite alternate;
  -o-animation: color_change 7s infinite alternate;
  animation: color_change 7s infinite alternate;
  &:hover{
    -webkit-animation: stop;
    -moz-animation: stop;
    -ms-animation: stop;
    -o-animation: stop;
    animation: stop;
    color: pink;
  }
}

#calendar_courses_hide {
  display: none;
  font-size: 150%;
  float: center;
  left: 20%;
  right: 20%;
  position: absolute;
  top: 1.5%;
  color: #aa44ff;
  -webkit-animation: color_change 7s infinite alternate;
  -moz-animation: color_change 7s infinite alternate;
  -ms-animation: color_change 7s infinite alternate;
  -o-animation: color_change 7s infinite alternate;
  animation: color_change 7s infinite alternate;
  &:hover{
    -webkit-animation: stop;
    -moz-animation: stop;
    -ms-animation: stop;
    -o-animation: stop;
    animation: stop;
    color: pink;
  }
}

div#calendar_courses_page {
  font-size: 150%;
  top: 4%;
  left: 1%;
  right: 10%;
  float: center;
}

#calendar_courses_page #month {
  width: 100%;
}

#calendar_courses_page .calendar {
  width: 100%;
}

/* Tooltip */

span.tooltip {
  font-size: 14px;
  position: absolute;
  border: 5px double #000;
  -webkit-box-shadow: 5px 5px 10px #000;
  -moz-box-shadow: 5px 5px 10px #000;
  box-shadow: 5px 5px 10px #000;
  background: #99FFCC;
  cursor: help;
  display: inline-block;
  text-decoration: none;
  color: #222;
  padding:.75%;
}


.tooltip:hover
{
  border: 0; /* IE6 fix */
}

