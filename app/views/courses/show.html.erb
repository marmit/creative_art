<% provide(:title, @course.title.titleize) %>
<%= render 'courses/main_header' %>
<nav id='login_bar'>
  <h1><%= @course.title.upcase %></h1>
  <% if teacher_signed_in? %>
    <% if current_teacher.admin? %>
      <%= link_to 'Edit Course', edit_course_path(@course), :class=>'new' %>
    <% end %>
  <% end %>
</nav>
<section id='main'>
  <section class="main-body">
    <h2>
        <%= @course.description %>
      </h2>
  </section>
</section>
