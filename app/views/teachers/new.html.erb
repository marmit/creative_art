<% provide(:title, "New Teacher") %>
<%= render 'teachers/main_header' %>
<nav id='login_bar'>
  <h1>Add A New Teacher</h1>
</nav>
<section id='main'>
  <div class="row">
    <%= form_for @teacher do |f| %>

      <%= render 'shared/error_messages'%>

      <%= f.label :teacher_name, "Full Name" %>
      <%= f.text_field :teacher_name %></br>

      <%= f.label :password %>
      <%= f.password_field :password %></br>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Create Teacher", class: "create_button" %>

    <% end %>
  </div>
</section>
